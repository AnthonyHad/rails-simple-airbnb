<div class="container">
  <div class="title d-flex justify-content-between align-items-center">
  <h1> Here are all the Flats! <%= "(#{@flats.count})" %></h1>
  <%= link_to "Add a Flat", new_flat_path, class: "btn btn-outline-primary h-50" %>
  </div>
   <div class="row">
      <% @flats.each do |flat|  %>
        <div class="cards col-3 offset-1">
          <h3><%=flat.name %></h3>
          <hr>
          <h6><%=flat.address %></h6>
          <h4><%="#{flat.price_per_night}$" %> | <%="#{flat.number_of_guests} guests" %></h4>
          <p><%= flat.description %></p>
          <div class="card-bottom"> <%= link_to "More Info", flat_path(flat) %></div>
        </div>
      <% end  %>
  </div>
</div>


